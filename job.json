{
  "apiVersion": "batch/v1",
  "kind": "Job",
  "metadata": {
    "name": "llm-job-mistralai",
    "namespace": "tenant-1"
  },
  "spec": {
    "template": {
      "spec": {
        "containers": [
          {
            "name": "llm-mistralai-container",
            "image": "ghcr.io/huggingface/text-generation-inference:latest",
            "command": ["/app/entrypoint.sh"],
            "args": [""],
            "env": [
              {
                "name": "HUGGINGFACE_TOKEN",
                "value": ""
              }
            ],
            "resources": {
              "limits": {
                "nvidia.com/gpu": 1
              }
            },
            "volumeMounts": [
              {
                "name": "cache",
                "mountPath": "/root/.cache"
              }
            ]
          }
        ],
        "restartPolicy": "Never",
        "volumes": [
          {
            "name": "cache",
            "emptyDir": {}
          }
        ]
      }
    },
    "backoffLimit": 1
  }
}
